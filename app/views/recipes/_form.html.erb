<%= form_with(model: recipe, local: true) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h5>

      <ul>
      <% recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :steps %>
    <%= form.text_area :steps, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= form.select :category, [ 'Breakfast', 'Main Dish', 'Snack', 'Dessert' ], :prompt => 'Select One', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit button_text, class: 'btn btn-primary'%>
  </div>
<% end %>
